{{outlet}}

{{#unless isEditing}}
  <article class="ticket">
    <h3>
      {{model.summary}}
      <small>- {{link-to 'edit' 'ticket.edit' classNames='edit'}}</small>
    </h3>
    <p><strong>Created by</strong>&nbsp;{{model.creator}}</p>
    <hr />
    <p>{{model.description}}</p>
  </article>
{{/unless}}
