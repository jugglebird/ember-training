<header class="tickets-header">
  <div class="tickets-filter">
    {{#sui-dropdown triggerText="Tickets" class="ticket-filter"}}
      {{sui-dropdown-item value="all" text="All"}}
      {{sui-dropdown-item value="open" text="Open"}}
      {{sui-dropdown-item value="closed" text="Closed"}}
    {{/sui-dropdown}}
  </div>
  {{#link-to "tickets.new" class="sui-bttn sui-bttn-primary new-ticket"}}
    New Ticket
  {{/link-to}}
</header>  

<article class="tickets">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><span class="property">ID</span></th>
        <th><span class="property">Summary</span></th>
        <th><span class="property">Creator</span></th>
        <th><span class="property">Created At</span></th>
      </tr>
    </thead>
    <tbody>
      {{#each ticket in model}}
        {{#link-to 'ticket' ticket tagName="tr"}}
          <td>{{ticket.id}}</td>
          <td>{{ticket.summary}}</td>
          <td>{{ticket.creator}}</td>
          <td>{{moment ticket.created_at "MM/DD/YYYY"}}</td>
        {{/link-to}}
      {{/each}}
    </tbody>
  </table>
</article>

{{outlet}}
